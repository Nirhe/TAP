@{
    ViewData["Title"] = "Ticket Analysis AI";
}

<div class="container-fluid ticket-analysis-container">
    <div class="row justify-content-center">
        <div class="col-12 col-xxl-8">
            <div class="card main-card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <h1 class="display-5 fw-bold mb-3">Ticket Analysis AI</h1>
                        <p class="lead text-muted">Transform complex support tickets into actionable insights</p>
                    </div>

                    <div class="row g-4">
                        <div class="col-12 col-lg-6">
                            <div class="ticket-input-section">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-header bg-primary text-white d-flex align-items-center">
                                        <i class="fas fa-ticket-alt me-3"></i>
                                        <h5 class="mb-0">Ticket Details</h5>
                                    </div>
                                    <div class="card-body">
                                        <form id="ticketAnalysisForm" novalidate>
                                            <div class="mb-3">
                                                <label for="ticketContent" class="form-label">Ticket Description</label>
                                                <textarea 
                                                    id="ticketContent" 
                                                    class="form-control" 
                                                    rows="8" 
                                                    placeholder="Paste your support ticket details here..."
                                                    required></textarea>
                                                <div class="invalid-feedback">
                                                    Please provide ticket details for analysis.
                                                </div>
                                            </div>
                                            <div class="d-grid">
                                                <button 
                                                    type="submit" 
                                                    class="btn btn-primary btn-lg" 
                                                    id="analyzeTicketBtn">
                                                    <span class="spinner-border spinner-border-sm me-2 d-none"></span>
                                                    <i class="fas fa-magic me-2"></i>
                                                    Analyze Ticket
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6">
                            <div class="ticket-results-section">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-header bg-success text-white d-flex align-items-center">
                                        <i class="fas fa-chart-bar me-3"></i>
                                        <h5 class="mb-0">Analysis Results</h5>
                                    </div>
                                    <div class="card-body">
                                        <div id="analysisResults" class="analysis-placeholder text-center py-5">
                                            <i class="fas fa-robot fa-4x text-muted mb-3"></i>
                                            <h5 class="text-muted">AI Analysis Ready</h5>
                                            <p class="text-muted">Enter a ticket and click analyze</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const $form = $('#ticketAnalysisForm');
            const $analyzeButton = $('#analyzeTicketBtn');
            const $spinner = $analyzeButton.find('.spinner-border');
            const $resultsContainer = $('#analysisResults');

            $form.on('submit', function(e) {
                e.preventDefault();
                
                if (this.checkValidity()) {
                    const ticketContent = $('#ticketContent').val().trim();
                    
                    // Disable button and show spinner
                    $analyzeButton.prop('disabled', true);
                    $spinner.removeClass('d-none');
                    
                    $.ajax({
                        url: '/Home/AnalyzeTicket',
                        type: 'POST',
                        data: { ticketContent: ticketContent },
                        success: function(response) {
                            renderAnalysisResults(response);
                        },
                        error: function(xhr) {
                            showErrorMessage(xhr.responseText || 'Analysis failed');
                        },
                        complete: function() {
                            // Reset button state
                            $analyzeButton.prop('disabled', false);
                            $spinner.addClass('d-none');
                        }
                    });
                } else {
                    $form.addClass('was-validated');
                }
            });

            function renderAnalysisResults(response) {
                const resultsHtml = `
                    <div class="analysis-results">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <h6 class="card-title text-primary">
                                            <i class="fas fa-tag me-2"></i>Category
                                        </h6>
                                        <span class="badge bg-primary">${response.analysis.category}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <h6 class="card-title text-warning">
                                            <i class="fas fa-flag me-2"></i>Priority
                                        </h6>
                                        <span class="badge bg-${getPriorityBadgeClass(response.analysis.priority)}">
                                            ${response.analysis.priority}
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-title text-info">
                                            <i class="fas fa-file-alt me-2"></i>Summary
                                        </h6>
                                        <p class="card-text">${response.analysis.summary}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title text-success">
                                            <i class="fas fa-tasks me-2"></i>Recommended Actions
                                        </h6>
                                        <ul class="list-group list-group-flush">
                                            ${response.recommendations.suggestedActions.map(action => 
                                                `<li class="list-group-item">
                                                    <i class="fas fa-chevron-right text-primary me-2"></i>
                                                    ${action}
                                                </li>`
                                            ).join('')}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                $resultsContainer.html(resultsHtml);
            }

            function showErrorMessage(message) {
                $resultsContainer.html(`
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        ${message}
                    </div>
                `);
            }

            function getPriorityBadgeClass(priority) {
                const priorityClasses = {
                    'Critical': 'danger',
                    'High': 'warning',
                    'Medium': 'info',
                    'Low': 'success'
                };
                return priorityClasses[priority] || 'secondary';
            }
        });
    </script>
}